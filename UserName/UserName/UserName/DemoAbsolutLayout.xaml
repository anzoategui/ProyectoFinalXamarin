<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UserName.DemoAbsolutLayout">
    <ContentPage.Content>
        <AbsoluteLayout>
            <Button BackgroundColor="Aquamarine"
                    Text="Enviar"
                    AbsoluteLayout.LayoutBounds="10,180,150,100">
            </Button>
            <Button BackgroundColor="Red"
                    Text="Enviar"
                    AbsoluteLayout.LayoutBounds="110,230,150,100">
            </Button>
            <Button BackgroundColor="Black"
                    Text="Enviar"
                    AbsoluteLayout.LayoutBounds="100,130,200,.3"
                    AbsoluteLayout.LayoutFlags="HeightProportional">
            </Button>
        </AbsoluteLayout>
    </ContentPage.Content>
</ContentPage>